{
  "name": "vibedstudio",
  "version": "0.1.11",
  "description": "Local-first AI video studio for BytePlus generation and editing.",
  "author": "VibedStudio",
  "private": true,
  "type": "module",
  "main": "desktop/main.js",
  "scripts": {
    "dev": "electron .",
    "start": "node desktop/server.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "icon": "build/icon.png",
    "appId": "com.vibedstudio.app",
    "productName": "VibedStudio",
    "compression": "maximum",
    "asarUnpack": [
      "node_modules/ffmpeg-static/**"
    ],
    "files": [
      "desktop/**",
      "index.html",
      "app.js",
      "style.css",
      "editor.js",
      "editor.css",
      "images.js",
      "images.css",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "build/icon.png",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.video"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage"
      ]
    }
  }
}
